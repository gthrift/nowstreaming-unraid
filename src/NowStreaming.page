<script>
    var nsPollInterval = <?=$poll_interval;?>;
    
    function updateNowStreamingDashboard() {
        $.get("/plugins/nowstreaming/nowstreaming_api.php", function(data) {
            if (data) {
                // 1. Update list
                $("#nowstreaming_streams").html(data);
                
                // 2. Update count
                var count = $("#nowstreaming_streams .as-row").length;
                if(data.indexOf("No active streams") !== -1 || 
                   data.indexOf("No servers configured") !== -1 ||
                   data.indexOf("Connection failed") !== -1) { 
                    count = 0; 
                }
                $("#nowstreaming_count").text(count);
            }
        });
    }

    $(function() {
        updateNowStreamingDashboard();
        setInterval(updateNowStreamingDashboard, nsPollInterval);
    });
</script>
